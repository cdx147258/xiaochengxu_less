page{
  height: 100%;
}
.box{
  height: 100%;
  display: flex;
  justify-content: space-between;
}
.left{
  width: 200rpx;
  height: 100%;
  background-color: #F4F4F4;
  border: 1px solid #DEDEDE;
}
.right{
  width: 70%;  
}
.rightMenu{
  display: flex;
  justify-content: space-between;
  border-bottom: 2px solid #DEDEDE;
  padding-top: 30rpx;
}
.rightItem>text{
  display: block;
  height: 60rpx;
  line-height: 60rpx;
}
.left>text{
  display: block;
  height: 100rpx;
  text-align: center;
  line-height: 30rpx;
}
.price{
  font-size: 30rpx;
  color: #FFA600;
}
.checkboxId{
  outline: none;
  border: none;
}
